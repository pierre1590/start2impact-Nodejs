<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Polluted places</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">

  </head>
  <body>
    <h1 class="title is-1" text-align="center">Polluted places</h1>
    <a href="newPlace" class="button is-primary is-rounded is-normal">Add Place</a>
      <div class="container is-fluid">
      <div class="notification is-primary is-rounded">
        <table class="table is-hoverable is-striped is-fullwidth" >
            <thead>
              <tr>
                <th>Image</th>
                <th>Location</th>
              </tr>
            </thead>
            <tbody>
              <%
              if(data.length!=0){
                var i=1;
                data.forEach(function(data){
                  %>
                <tr>
                  <td>
                    <%=i; %>
                  </td>
                  <td> 
                    <figure is-square> 
                      <img src="<%=data.image %>"/>
                  </td>
                  <td>
                    <%=data.location %>
                  </td>
                </tr>
                <% i++; }) %>
                <% } else{ %>
                  <tr>
                    <td colspan="7"> No place found</td>
                  </tr>
                  <% } %>
            </tbody>
          </div>
    </div>
  </body>
</html>